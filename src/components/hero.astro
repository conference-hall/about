---
// Hero component for Conference Hall landing page
import CallToAction from './CallToAction.astro';
---

<section class="hero" aria-label="Conference Hall landing">
  <div class="blueprint-lines-top"></div>
  <div class="hero-content">
    <h1 class="hero-title">Conference Hall</h1>
    <p class="hero-tagline">
      A modern call for papers and speaker experience.<br />
      One platform. All events. Simplified workflow.
    </p>
    <div class="hero-ctas">
      <CallToAction
        href="https://conference-hall.io"
        variant="primary"
        aria-label="Submit your talk on Conference Hall"
      >
        Submit Your Talk
      </CallToAction>
      <CallToAction
        href="https://conference-hall.io/team/request"
        variant="secondary"
        aria-label="Host your event with Conference Hall"
      >
        Host Your Event
      </CallToAction>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      45deg,
      #4338ca 0%,
      #7c3aed 25%,
      #ec4899 50%,
      #f59e0b 75%,
      #4338ca 100%
    );
    background-size: 300% 300%;
    animation: gradientLoop var(--animation-duration-slow) ease-in-out infinite
      alternate;
    padding: 2rem;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(
        circle at 30% 70%,
        rgba(139, 92, 246, 0.4) 0%,
        rgba(139, 92, 246, 0.1) 40%,
        transparent 70%
      ),
      radial-gradient(
        circle at 70% 30%,
        rgba(236, 72, 153, 0.3) 0%,
        rgba(236, 72, 153, 0.1) 35%,
        transparent 65%
      ),
      radial-gradient(
        circle at 50% 50%,
        rgba(6, 182, 212, 0.2) 0%,
        rgba(6, 182, 212, 0.05) 40%,
        transparent 60%
      );
    animation: float var(--animation-duration-slow) ease-in-out infinite;
    filter: blur(80px);
  }

  .hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(
        ellipse at 20% 80%,
        rgba(249, 115, 22, 0.2) 0%,
        transparent 50%
      ),
      radial-gradient(
        ellipse at 80% 20%,
        rgba(16, 185, 129, 0.25) 0%,
        transparent 55%
      ),
      radial-gradient(
        ellipse at 60% 60%,
        rgba(26, 26, 46, 0.3) 0%,
        transparent 45%
      );
    animation: float var(--animation-duration-medium) ease-in-out infinite
      reverse;
    filter: blur(120px);
  }

  .hero .blueprint-lines-top {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-image:
      linear-gradient(to right, rgba(255, 255, 255, 0.12) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(255, 255, 255, 0.12) 1px, transparent 1px);
    background-size:
      48px 48px,
      48px 48px;
    background-position:
      0 0,
      0 0;
    opacity: 1;
    z-index: 1;
    mask: radial-gradient(
      ellipse 90% 60% at 50% 50%,
      rgba(0, 0, 0, 0.15) 20%,
      rgba(0, 0, 0, 0.1) 30%,
      rgba(0, 0, 0, 0.25) 40%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 0, 0, 0.6) 60%,
      rgba(0, 0, 0, 0.8) 75%,
      rgba(0, 0, 0, 1) 90%
    );
  }

  @keyframes gradientLoop {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 100% 50%;
    }
  }

  @keyframes float {
    0% {
      transform: translate(0px, 0px) rotate(0deg) scale(1);
    }
    25% {
      transform: translate(15px, -20px) rotate(90deg) scale(1.1);
    }
    50% {
      transform: translate(0px, -15px) rotate(180deg) scale(0.95);
    }
    75% {
      transform: translate(-20px, 10px) rotate(270deg) scale(1.05);
    }
    100% {
      transform: translate(0px, 0px) rotate(360deg) scale(1);
    }
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    z-index: 10;
    position: relative;
  }

  .hero-content::before {
    content: '';
    position: absolute;
    top: -200px;
    left: -200px;
    right: -200px;
    bottom: -200px;
    background:
      radial-gradient(
        circle at 40% 60%,
        rgba(139, 92, 246, 0.08) 0%,
        transparent 60%
      ),
      radial-gradient(
        circle at 70% 30%,
        rgba(236, 72, 153, 0.06) 0%,
        transparent 55%
      ),
      radial-gradient(
        circle at 30% 80%,
        rgba(6, 182, 212, 0.05) 0%,
        transparent 50%
      );
    animation: float var(--animation-duration-fast) ease-in-out infinite;
    filter: blur(100px);
    z-index: -1;
    pointer-events: none;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 800;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.02em;
    line-height: 1.1;
    animation: slideInUp 1s ease-out 0.2s both;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: var(--text-shadow-primary);
  }

  .hero-tagline {
    font-size: clamp(1.1rem, 3vw, 1.4rem);
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 3rem 0;
    line-height: 1.6;
    font-weight: 400;
    animation: slideInUp 1s ease-out 0.4s both;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-ctas {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: slideInUp 1s ease-out 0.6s both;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 1rem;
    }

    .hero-ctas {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
