---
import CallToAction from './call-to-action.astro';
---

<div class="hero-section">
  <div class="hero-content">
    <h1 class="hero-title">Conference Hall</h1>
    <p class="hero-tagline">
      A modern call for papers and speaker experience.<br />
      One platform. All events. Simplified workflow.
    </p>
    <div class="hero-ctas">
      <CallToAction
        href="https://conference-hall.io"
        variant="primary"
        aria-label="Submit your talk on Conference Hall"
      >
        Submit Your Talk
      </CallToAction>
      <CallToAction
        href="https://conference-hall.io/team/request"
        variant="secondary"
        aria-label="Host your event with Conference Hall"
      >
        Host Your Event
      </CallToAction>
    </div>
  </div>
</div>

<style>
  .hero-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    z-index: 10;
    position: relative;
    margin: 8rem 0 20rem 0;
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 5rem);
    margin: 0 0 1.5rem 0;
    animation: slideInUp 1s ease-out 0.2s both;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: var(--text-shadow-primary);
  }

  .hero-tagline {
    font-size: clamp(1rem, 3vw, 1.2rem);
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 3rem 0;
    line-height: 1.6;
    animation: slideInUp 1s ease-out 0.4s both;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-ctas {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: slideInUp 1s ease-out 0.6s both;
  }

  @media (max-width: 1024px) {
    .hero-content {
      margin: 8rem 0 14rem 0;
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: 1rem;
    }

    .hero-content {
      margin: 6rem 0 6rem 0;
    }

    .hero-ctas {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
