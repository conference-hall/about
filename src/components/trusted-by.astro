---
const companies = [
  {
    name: 'DevFest Nantes',
    logo: '/images/logos/devfest-nantes.svg',
    website: 'https://devfest.gdgnantes.com/',
  },
  {
    name: 'MiXiT',
    logo: '/images/logos/mixit.svg',
    website: 'https://mixitconf.org/',
  },
  {
    name: 'Volcamp',
    logo: '/images/logos/volcamp.svg',
    website: 'https://www.volcamp.io/',
  },
  {
    name: 'Snowcamp',
    logo: '/images/logos/snowcamp.svg',
    website: 'https://snowcamp.io/',
  },
  {
    name: 'BDX I/O',
    logo: '/images/logos/bdx-io.svg',
    website: 'https://www.bdx.io/',
  },
];
---

<div class="trusted-by-section">
  <div class="trusted-by-content">
    <div class="trusted-by-header">
      <h2>Trusted by leading events</h2>
      <p>Join hundreds of conferences and meetups worldwide using Conference Hall.</p>
    </div>

    <div class="logos-grid">
      {
        companies.map((company) => (
          <div class="logo-item">
            <img src={company.logo} alt={`${company.name} logo`} loading="lazy" />
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .trusted-by-section {
    border-top: 1px solid rgba(255, 255, 255, 0.3);
  }

  .trusted-by-content {
    max-width: 1300px;
    margin: 0 auto;
    padding: 4rem 0;
  }

  .trusted-by-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .trusted-by-header h2 {
    font-size: clamp(1.5rem, 3vw, 2rem);
    margin: 0 0 1rem 0;
    color: rgba(255, 255, 255, 0.9);
    font-family: 'Outfit', sans-serif;
    font-weight: 600;
  }

  .trusted-by-header p {
    font-size: clamp(0.9rem, 2vw, 1rem);
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .logos-grid {
    display: flex;
    flex-wrap: wrap;
    row-gap: 2rem;
    column-gap: 3rem;
    justify-content: center;
    align-items: center;
  }

  .logo-item {
    width: 100%;
    max-width: 160px;
    aspect-ratio: 2.5 / 1.5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .logo-item img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: brightness(0) invert(1);
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .trusted-by-content {
      padding: 2rem 1rem;
    }

    .trusted-by-header {
      margin-bottom: 2rem;
    }

    .logos-grid {
      row-gap: 1.5rem;
      column-gap: 2rem;
    }

    .logo-item {
      max-width: 120px;
    }
  }

  @media (max-width: 480px) {
    .logos-grid {
      row-gap: 1rem;
      column-gap: 1.5rem;
    }
  }
</style>
