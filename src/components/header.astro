<header>
  <nav>
    <div class="hamburger">
      <span class="line"></span>
      <span class="line"></span>
      <span class="line"></span>
    </div>

    <div class="nav-links">
      <a href="/">Home</a>
    </div>
  </nav>
</header>

<style>
  .hamburger {
    padding-right: 20px;
    padding-bottom: 12px;
    cursor: pointer;
  }

  .hamburger .line {
    display: block;
    width: 16px;
    height: 2px;
    margin-bottom: 4px;
    background-color: #000000;
  }

  .nav-links {
    width: 100%;
    display: none;
  }

  .nav-links a {
    display: block;
    padding: 12px;
    text-decoration: none;
    font-weight: bold;
    text-transform: uppercase;
  }

  .nav-links a:hover,
  .nav-links a:focus {
    background-color: #dddddd;
  }

  .expanded {
    display: unset;
  }

  @media screen and (min-width: 636px) {
    .nav-links {
      display: block;
      position: static;
      width: auto;
      background: none;
    }

    .nav-links a {
      display: inline-block;
      padding: 0;
    }

    .nav-links a:hover,
    .nav-links a:focus {
      background-color: unset;
      text-decoration: underline;
    }

    .hamburger {
      display: none;
    }
  }
</style>
