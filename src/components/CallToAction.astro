---
export interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
}

const { href, variant = 'primary', ...rest } = Astro.props;
---

<a href={href} class={`cta cta-${variant}`} {...rest}>
  <slot />
</a>

<style>
  .cta {
    display: inline-block;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s var(--animation-ease);
    position: relative;
    overflow: hidden;
    border: none;
    background: var(--glass-bg);
    color: white;
    backdrop-filter: blur(10px);
  }

  .cta-primary {
    box-shadow:
      0 8px 25px rgba(0, 0, 0, 0.15),
      inset 0 0 0 2px var(--glass-border);
    animation: slideInLeft 1s ease-out 0.8s both;
    z-index: 1;
  }

  .cta-primary::before {
    content: '';
    position: absolute;
    top: -100%;
    left: -100%;
    right: -100%;
    bottom: -100%;
    background: linear-gradient(
      45deg,
      rgba(67, 56, 202, 0.7) 0%,
      rgba(124, 58, 237, 0.7) 25%,
      rgba(236, 72, 153, 0.7) 50%,
      rgba(245, 158, 11, 0.7) 75%,
      rgba(67, 56, 202, 0.7) 100%
    );
    background-size: 300% 300%;
    animation: primaryGradientSmooth var(--animation-duration-slow) ease-in-out
      infinite;
    filter: blur(30px);
    z-index: -1;
  }

  .cta-secondary {
    box-shadow:
      0 8px 25px rgba(0, 0, 0, 0.1),
      inset 0 0 0 2px rgba(255, 255, 255, 0.3);
    animation: slideInRight 1s ease-out 0.8s both;
  }

  .cta-primary:hover {
    transform: translateY(-3px);
    background: rgba(255, 255, 255, 0.4);
    box-shadow:
      0 12px 35px rgba(0, 0, 0, 0.2),
      inset 0 0 0 2px rgba(255, 255, 255, 0.6);
  }

  .cta-secondary:hover {
    transform: translateY(-3px);
    background: rgba(255, 255, 255, 0.25);
    box-shadow:
      0 12px 35px rgba(0, 0, 0, 0.15),
      inset 0 0 0 2px rgba(255, 255, 255, 0.5);
  }

  @keyframes primaryGradientSmooth {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  @media (max-width: 768px) {
    .cta {
      width: 100%;
      max-width: 300px;
    }
  }
</style>
